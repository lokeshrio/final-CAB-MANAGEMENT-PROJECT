<div class="container">
 <style>
    body{
        background-image: url("https://img.freepik.com/premium-vector/taxi-city_1270-526.jpg?w=2000");
        background-repeat: no-repeat;
        background-size: cover;
        color: black;
    }
    
</style>
    <h1 class="text-center">Cab Details</h1>
    <div class="row">
        <div class="col-sm-6 offset sm-3">
            <form method="post">
                
                
                <div>
                    <label for="cabName">Cab Name</label>
                    <input type="text" name="cabName" id="cabName" class="form-control" value="{{cabDetails.dataValues.cabName}}">
                </div>
                <div>
                    <label for="cabDescription">Cab Description</label>
                    <textarea name="cabDescription" id="cabDescription" cols="10" rows="5"
                        class="form-control" >{{cabDetails.dataValues.cabDescription}}</textarea>
                </div>
                <div>
                    <label for="totalCapacity">Total Capacity</label>
                    <input type="number" name="cabTotalCapacity" id="cabTotalCapacity" class="form-control" value="{{cabDetails.dataValues.cabTotalCapacity}}">
                </div>
               

                 
                <div>
                   
                    <label for="Drivername">Driver</label>
                    
                    <select class="driverName" name="driverName" id="driverName">
                    {{#each driverName}}
                   
                    <option value={{this.dataValues.driverName}}:{{this.dataValues.driver_Id}}> {{this.dataValues.driverName}}</option>
                    {{/each}}
                  
                </select>
                  

                </div>

                <div class="d-grid mt-4">
                    <button class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<link rel="stylesheet" href="/static/register.css" type="text/css">
<div class="container">
        <h1 class="text-center">{{heading}}</h1>
        <div class="row">
            <div class="col-sm-6 offset-sm-3">
                <form method="post">
                    <h1>DRIVER REGISTRATION</h1>
                    <div>
                        <label for="driverName">Full Name</label>
                        <input type="text" name="driverName" class="form-control" placeholder="Full Name" >
                    </div>
                    <div>
                        <label for="driverLiceneceNo">Driver LIcenece No</label>
                        <input type="text" name="driverLiceneceNo" class="form-control" placeholder="Driver Licenece No" >
                    </div>
                    <div>
                        <label for="driverEmail">Email</label>
                        <input type="email" name="driverEmail" class="form-control" placeholder="Email" >
                    </div>
                    <div>
                        <label for="driverAddress">Driver Address</label>
                        <input type="text" name="driverAddress" class="form-control" placeholder="driver Address" >
                    </div>
                    <div>
                        <label for="driverDob">DOB</label>
                        <input type="date" name="driverDob" class="form-control" placeholder="DOB" >
                    </div>
                    <div>
                        <label for="driverGender">Gender</label>
                        <input type="text" name="driverGender" class="form-control" placeholder="Gender" >
                    </div>
            
                    <div>
                        <label for="driverPassword">Password</label>
                        <input type="password" name="driverPassword" class="form-control" placeholder="Password" >
                    </div>
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary shadow" id="btn-login">Register</button>
                        {{#if message}}
                           <p class="text-danger">{{message}}</p>
                        {{/if}}

                    </div>

                </form>
            </div>
        </div>
    </div>
